  <script>
    // Matrix click handler
    const cells = document.querySelectorAll("#matrix div");
    const scoreOutput = document.getElementById("riskScore");
    cells.forEach(cell => {
      cell.addEventListener("click", () => {
        cells.forEach(c => c.classList.remove("selected"));
        cell.classList.add("selected");
        scoreOutput.innerText = cell.dataset.score;
      });
    });
  </script>
